[user]
    name = {{ .name }}
    email = {{ .email }}

[core]
    editor = nvim
{{- if .isMac }}
    autocrlf = input
{{- end }}
{{- if .isWSL }}
    autocrlf = true
{{- end }}

[init]
    defaultBranch = main

[pull]
    rebase = true

# Directory-specific settings
[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work
